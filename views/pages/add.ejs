<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">

            <h2>Welcome to The Integrify Photos Gallery - Add page</h2>

            <% include ../partials/menu %>

            <form action="/addConfirmation" method="POST" enctype="multipart/form-data">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" />
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name"/>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title"/>
                    <input type="text" class="form-control" id="nationality" name="nationality" placeholder="Nationality"/>
                    <label id="#bb"> Enter Your Picture
                        <input type="file" id="studentPicture" name="studentPicture" />
                    </label> 
                    <input type="text" class="form-control" id="whySofterDeveloper" name="whySofterDeveloper" placeholder="whySofterDeveloper"/>
                    <input type="text" class="form-control" id="longTermVision" name="longTermVision"placeholder="Long Term Vision"/>
                    <input type="text" class="form-control" id="motivatesMe" name="motivatesMe"placeholder="Motivates Me"/>
                    <input type="text" class="form-control" id="favoriteQuote" name="favoriteQuote" placeholder="Favorite Quote"/>
                    <input type="date" class="form-control" id="joinedOn" name="joinedOn" placeholder="Joined On"/>
                    <textarea class="form-control" rows="5" id="skills" name="skills" placeholder="Write your skills(HTML,JAVA,CSS)"></textarea>
               
                 <button type="submit" class="btn btn-default">Add Student</button>
                 <button type="reset" class="btn btn-default">Reset</button>
            </form>

        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>