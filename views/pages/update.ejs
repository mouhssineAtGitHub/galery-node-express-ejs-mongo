<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">

            <h2>Welcome to The Integrify Photos Gallery - Update page</h2>

            <% include ../partials/menu %>

                <form action="/updateConfirmation" method="POST">
                    
                    <input type="hidden" id="_id" name="_id" value="<%=student._id %>" />

                    <label>your first name:</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" value="<%=student.firstName %>"
                    />
                    <label>your last name:</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" value="<%=student.lastName %>"
                    />

                    <label>your title:</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="<%=student.title %>" />

                    <label>your nationality:</label>
                    <input type="text" class="form-control" id="nationality" name="nationality" placeholder="Nationality" value="<%=student.nationality %>"
                    />


                    <input type="hidden" class="form-control" id="src" name="src" placeholder="Src" value="<%=student.src %>" />


                    <input type="hidden" class="form-control" id="alt" name="alt" placeholder="Alt" value="<%=student.alt %>" />

                    <label>why Softer Developer:</label>
                    <input type="text" class="form-control" id="whySofterDeveloper" name="whySofterDeveloper" placeholder="whySofterDeveloper"
                        value="<%=student.whySofterDeveloper %>" />

                    <label>long Term Vision:</label>    
                    <input type="text" class="form-control" id="longTermVision" name="longTermVision" placeholder="Long Term Vision" value="<%=student.longTermVision %>"
                    />

                    <label>motivates Me:</label>
                    <input type="text" class="form-control" id="motivatesMe" name="motivatesMe" placeholder="Motivates Me" value="<%=student.motivatesMe %>"
                    />

                    <label>favorite Quote:</label>
                    <input type="text" class="form-control" id="favoriteQuote" name="favoriteQuote" placeholder="Favorite Quote" value="<%=student.favoriteQuote %>"
                    />

                    <label>your joinedOn:</label>
                    <input type="date" class="form-control" id="joinedOn" name="joinedOn" placeholder="Joined On" value="<%=student.joinedOn %>"
                    />

                    <label>your skills:</label>
                    <textarea class="form-control" rows="5" id="skills" name="skills" placeholder="Skills"><%=student.skills %></textarea>

                    <button type="submit" class="btn btn-default">Update Student</button>

                </form>

        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>